include ./_config
- var page = pagelist['pagelist'];

doctype html
html(lang="ja")
  head
    include ./include/_head
    style
      | body {
      |	font: 14px/1.231 'メイリオ', Helvetica, Arial, sans-serif;
      |	-webkit-text-size-adjust: none;
      | }
      | header {
      |	position: relative;
      |	padding: 32px 0 0;
      |	color: #000;
      |	font-size: 20px;
      |	text-align: center;
      | }
      | main {
      |	padding: 32px;
      | }
      | table {
      |	margin: 0 auto;
      |	background-color: #fff;
      |	border: #D0BFC3 1px solid;
      |	border-collapse: collapse;
      |	border-spacing: 0;
      | }
      | table td, table th {
      |	border: #D0BFC3 1px solid;
      |	border-width: 0 0 1px 1px;
      |	padding: 7px;
      |	vertical-align:top;
      | }
      | table th {
      |	background: #999;
      |	color:#fff;
      |	text-align:center;
      | }
      | .center {
      |	text-align:center;
      | }
      | footer {
      |	text-align: center;
      |	color: #000;
      |	padding: 0;
      |	position: relative;
      | }
      | footer p {
      |	margin: 15px 0;
      | }
  body(style="opacity: 1 !important;")
    header
      h1 サンプルサイト 画面一覧
    main
      table(cellspacing="0" cellpadding="0" border="0" width="100%")
        tr
          th(width="3%") ID
          th(width="30%") ページ名
          th(width="34%") ファイル名
          th(width="8%") 確認用URL
          th(width="5%") 本番URL
          th(width="20%") ステータス
        - var count = 0;
        each obj in pagelist
          if obj.title !== "画面一覧"
            - count++;
            tr
              td.center #{count}
              td #{obj.page_title}
              td
                a(href=obj.local_url target="_blank") #{obj.local_url}
              td.center
                a(href=obj.local_url target="_blank") ■
              td.center
                a(href=obj.url target="_blank") ■
              td #{obj.dev_state}
    footer
      p copy&copy; aru Co.,Ltd. All rights reserved
